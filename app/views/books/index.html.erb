<header class="header">
  <h1 class="header_title"><%= link_to 'B&K wedding', root_path, :class => 'header-link'%></h1>
</header>
<main class="main">
  <% if notice.present? %>
      <p id="notice" class="bg-success"><%= notice %></p>
  <% end %>

  <h1 class="inline">Бажані книги</h1>
  <%= link_to 'Наша бібліотека', our_collection_books_path,
              class: 'btn btn-success right btn-right' %>
  <%= link_to 'Наші гості вже обрали', selected_books_path,
              class: 'btn btn-success right btn-right' %>

  <table class="table table-hover table-responsive">
    <thead>
    <tr>
      <th>Назва книги</th>
      <th>Автор</th>
      <th>Видавництво</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @books.each do |book| %>
        <tr>
          <td><%= book.name %></td>
          <td><%= book.author %></td>
          <td><%= book.publishing_house %></td>
          <td><%= button_to 'Обрати книгу', choose_path(book_id: book.id),
                            method: :post, remote: true,
                            data: { confirm: 'Ви впевнені, що хочете обрати саме цю книгу?' },
                            class: "btn btn-success btn-choose" %></td>

        </tr>
    <% end %>
    </tbody>
  </table>
</main>
<footer class="footer">
  <span>All rights reserved &copy; 2017</span>
</footer>