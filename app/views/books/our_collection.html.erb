<header class="header">
  <h1 class="header_title"><%= link_to 'B&K wedding', root_path, :class => 'header-link'%></h1>
</header>
<main class="main">
  <h1 class="inline">Наша бібліотека</h1>
  <%= link_to 'Бажані книги', books_path,
              class: 'btn btn-success right btn-right' %>
  <%= link_to 'Наші гості вже обрали', selected_books_path,
              class: 'btn btn-success right btn-right' %>

  <table class="table table-hover table-responsive">
    <thead>
    <tr>
      <th>Назва книги</th>
      <th>Автор</th>
      <th>Видавництво</th>
    </tr>
    </thead>

    <tbody>
    <% @books.each do |book| %>
        <tr>
          <td><%= book.name %></td>
          <td><%= book.author %></td>
          <td><%= book.publishing_house %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</main>
<footer class="footer">
  <span>All rights reserved &copy; 2017</span>
</footer>